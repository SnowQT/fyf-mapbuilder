{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noResolve": false,
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "outDir": "../build/transpiled/",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "typeRoots": [ "node_modules/@types", "./src/typings.d.ts" ]
  },
  "include": [
    "@types/**/*.d.ts"
  ],

  "exclude": [
    "./node_modules/**/*"
  ],

  "files": [
    "src/MapBuilderApp.tsx"
  ]
}